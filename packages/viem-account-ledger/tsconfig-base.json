{
  "extends": "@celo/typescript/tsconfig.library.json",
  "compilerOptions": {
    "rootDir": "src",
    "declaration": true,
    "esModuleInterop": true,
    "types": ["node", "vitest/globals"],
    "lib": ["esnext"],
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["**/*.test.ts"]
}
