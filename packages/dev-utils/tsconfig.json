{
  "extends": "@celo/typescript/tsconfig.library.json",
  "compilerOptions": {
    "resolveJsonModule": true,
    "moduleResolution": "node16",
    "declarationMap": true,
    "module": "Node16",
    "rootDir": "src",
    "outDir": "lib",
    "esModuleInterop": true,
    "target": "es2020",
    "strict": false,
    "declaration": true,
  },
  "include": ["src/**/*", "src/migration-override.json"]
}
