{
  "compilerOptions": {
    "rootDir": "src",
    "declaration": true,
    "esModuleInterop": true,
    "types": ["node", "@types/jest", "vitest/globals"],
    "lib": ["esnext"],
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "src/migration-override.json"],
  "exclude": ["**/*.test.ts"]
}
